<!DOCTYPE html>
<html>

<head>
    <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet" />
    <link href="./main.css" rel="stylesheet" />
    <title>Document</title>
</head>

<body>
    <!-- document body -->
    <div class="doc_body">
        <!-- water mark -->
        <div class="watermark"></div>

        <span class="transcript_title"> Courses Completed Transcript </span>

        <span class="student_name"> NAME Student Name </span>

        <!-- background section where the logo goes -->
        <div class="transcript_logo"></div>

        <table>
            <tr>
                <!-- table headers -->
                <td><span class="course_title"> COURSE TITLE </span></td>
                <td><span class="completion_date">COMPLETION DATE</span></td>
            </tr>
            <!-- table contents: each course and completion date is on a new row -->
            <!-- New Row for each completed course -->
            <% if (completed_course.length> 0) { %>
                <% completed_course.forEach(course=> { %>
                    <td>
                        <span class="course_title_entry">
                            <%= course.course_name %>
                        </span>
                    </td>
                    <td>
                        <span class="completion_date_entry">
                            <%= course.date_completed %>
                        </span>
                    </td>
                    <% }); %>
                        <% }; %>
